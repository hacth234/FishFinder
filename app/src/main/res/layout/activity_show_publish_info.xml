<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">


        <TableRow
            android:id="@+id/trPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgUserCatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="77dp"
                android:layout_marginBottom="28dp"
                tools:srcCompat="@tools:sample/avatars" />
        </TableRow>



        <TableRow
            android:id="@+id/trCatchTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TvCatchTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catch Title:"
                android:textColor="#2196F3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvCatchTitleInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:id="@+id/trUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User:"
                android:textColor="#2196F3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp" />
        </TableRow>


        <TableRow
            android:id="@+id/trFishName"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvFishName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fish Name:"
                android:textColor="#2196F3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvFishNameInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/trLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:textColor="#2196F3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvLocationInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/trLikes"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Likes:"
                android:textColor="#2196F3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvLikesInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/trVets"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvVets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vets"
                android:textColor="#2196F3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvVetsInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp" />
        </TableRow>


        <TableRow
            android:id="@+id/trCommentsTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvCommentsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments:"
                android:textColor="#2196F3"
                android:textSize="24sp" />
        </TableRow>


        <TableRow
            android:id="@+id/trComments"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ListView
                android:id="@+id/lvComments"
                android:layout_width="match_parent"
                android:layout_height="185dp" />
        </TableRow>
        <TableRow
            android:id="@+id/trAddComment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/edtAddAComment"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="@string/add_a_comment"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/btnInfoAddAComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>